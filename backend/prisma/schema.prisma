generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  firstname    String
  lastname     String
  passwordHash String
  birthdate    DateTime?
  country      String?
  phoneNumber  Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

model MentalState {
  id        String   @id @default(uuid())
  mood      Mood
  note      String?
  createdAt DateTime   @default(now())
  date      DateTime @default(now())
  userId    String
}

enum Mood {
  HAPPY
  EXCITED
  ENERGETIC
  PROUD
  MOTIVATED
  LOVED
  GRATEFUL
  CALM
  HOPEFUL
  CONFIDENT
  NEUTRAL
  TIRED
  BORED
  DISTRACTED
  INDIFFERENT
  REFLECTIVE
  SAD
  ANGRY
  ANXIOUS
  WORRIED
  FRUSTRATED
  OVERWHELMED
  LONELY
  EMBARRASSED
  STRESSED
  GUILTY
  HOPELESS
}

enum EnergyLevel {
  LOW
  MEDIUM
  HIGH
}

enum ExerciseType {
  RUN
  BIKE
  GYM
  SWIM
  YOGA
  WALK
}

enum IntensityLevel {
  LOW
  MEDIUM
  HIGH
}

model PhysicalHabit {
  id           String      @id @default(uuid())
  userId       String
  date         DateTime
  sleepHours   Float
  waterLiters  Float
  energyLevel  EnergyLevel
  note         String?
  createdAt    DateTime    @default(now())
}

model ExerciseRecord {
  id             String        @id @default(uuid())
  userId         String
  date           DateTime
  caloriesBurned Int
  note           String?
  createdAt      DateTime      @default(now())
  exercises      Exercise[]
}

model Exercise {
  id               String           @id @default(uuid())
  type             ExerciseType
  duration         Int
  intensity        IntensityLevel
  exerciseRecordId String
  exerciseRecord   ExerciseRecord   @relation(fields: [exerciseRecordId], references: [id])
}
